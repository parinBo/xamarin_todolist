<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="todoList.Popuppage">
    <ContentPage.Content>
        <StackLayout  Padding="10" WidthRequest="300" HeightRequest="400" BackgroundColor="White" HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="FirstName" />
            <Entry x:Name="FirstName" FontSize="Body" />
            <Label Text="LastName" />
            <Entry x:Name="LastName" FontSize="Body"  />
            <Label Text="Detail" />
            <Editor x:Name="Detail" />
            <Button BackgroundColor="DodgerBlue" FontSize="10" Text="Submit" TextColor="White" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>

    

</ContentPage>